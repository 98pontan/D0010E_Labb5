package lab5.events;
import lab5.sim.*;
import lab5.store.*;

/**
 * Description
 * 
 * @author Lucas Pettersson,
 * @author Pontus Eriksson Jirbratt, 
 * @author Jesper Johansson Oskarsson, 
 * @author Markus Blomqvist
 *
 */
public class StartEvent extends Event {
	private ArrivalEvent arrivalEvent;

	public StartEvent(StoreState model, EventQueue eventQueue) 
	{
		super(model, eventQueue);
		this.time = 0d;
		this.name = "Start";
		this.customer = null;
	}
	
	public void run() 
	{
		store.toggleIsOpen();

		double arrivalTime = store.getTimeFactory().generateArrivalTime();
		arrivalEvent = new ArrivalEvent(this.store, this.eventQueue, arrivalTime);
		eventQueue.addEvent(arrivalEvent);

//		store.update(this);
	}
}
